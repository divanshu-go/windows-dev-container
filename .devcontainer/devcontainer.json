// Windows Workspace  devcontainer image
{
  "name": "Windows Dev Container",
  "image": "dockurr/windows",
  "postCreateCommand": "/usr/bin/tini -s /run/entry.sh",
  "runArgs": [
    "--device=/dev/kvm",
    "--cap-add",
    "NET_ADMIN",
    "--stop-timeout",
    "120"
  ],
  "appPort": [
    "8006:8006",
    "3389:3389/tcp",
    "3389:3389/udp"
  ],
  "postStartCommand": "apt update && sudo apt install sudo curl libgit2-1.1 -y"
}
